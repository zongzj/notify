<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyLayout">
        <attr name="leftText" format="string"/>
        <attr name="title" format="string"/>
        <attr name="summary" format="string"/>
        <attr name="leftIcon" format="integer"/>
        <attr name="rightIcon" format="integer"/>
        <attr name="LtextSize" format="float"/>
        <attr name="LtextColor" format="color"/>
        <attr name="isShowUnderLine" format="boolean"/>
        <attr name="leftIconSize" format="dimension"/>
        <attr name="leftTextMarginLeft" format="dimension"/>
        <attr name="rightStyle" format="enum">
            <enum name="iconShow" value="0"/>
            <enum name="iconHide" value="1"/>
            <enum name="iconCheck" value="2"/>
            <enum name="iconSwitch" value="3"/>
        </attr>
        <attr name="isShowRightText" format="boolean"/>
        <attr name="rightText" format="string"/>
        <attr name="rightTextSize" format="float"/>
        <attr name="rightTextColor" format="color"/>
        <attr name="iconTintColor" format="reference|color"/>
    </declare-styleable>
    <declare-styleable name="WaveSideBar">
        <attr name="sidebar_lazy_respond" format="boolean"/>
        <attr name="sidebar_text_size" format="dimension"/>
        <attr name="sidebar_text_color" format="color"/>
        <attr name="sidebar_max_offset" format="dimension"/>
        <attr name="sidebar_position" format="enum">
            <enum name="right" value="0"/>
            <enum name="left" value="1"/>
        </attr>
        <attr name="sidebar_text_alignment" format="enum">
            <enum name="center" value="0"/>
            <enum name="left" value="1"/>
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>
</resources>